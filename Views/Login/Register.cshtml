@model StockControll.ViewModel.RegsiterViewModel

@{
    ViewBag.Title = "Registration";
    Layout = null;

    var roleOptions = new List<string>() { "a", "b", "c", "d" };
}

<style>
    .mb-20 {
        margin-bottom: 10px;
    }
</style>

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Your Application Name</title>
    <link href="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.7/dist/sweetalert2.min.css" rel="stylesheet" />

    @Styles.Render("~/Content/bootstrap.min.css", "~/Content/site.css")
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h2 class="panel-title">Registration</h2>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "container", role = "form" }))
                        {
                            @Html.AntiForgeryToken()

                            <div class="row g-3">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Name)
                                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control mb-20" })
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Email)
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control mb-20" })
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Roles)
                                    @Html.ListBoxFor(m => m.SelectedRoles, new MultiSelectList(roleOptions), new { @class = "form-control mb-20", multiple = "multiple", size = "4" })
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    @Html.LabelFor(m => m.Password)
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control mb-20", id = "passwordInput" })
                                </div>
                            </div>

                            <div class="row g-3">
                                @Html.LabelFor(m => m.ComfirmPassword, new { @class = "col-md-3 control-label" })
                                <div class="col-md-12">
                                    @Html.PasswordFor(m => m.ComfirmPassword, new { @class = "form-control mb-20", id = "passwordInput" })
                                </div>
                            </div>

                            <div class="row g-3">
                                <div class="col-md-12">
                                    <button type="submit" class="btn btn-primary">Register</button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.5.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.15.7/dist/sweetalert2.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#showPasswordBtn').click(function () {
                var passwordInput = $('#passwordInput');

                if (passwordInput.attr('type') === 'password') {
                    passwordInput.attr('type', 'text');
                } else {
                    passwordInput.attr('type', 'password');
                }
            });

            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <text>
                Swal.fire({
                    icon: 'error',
                    title: 'Oops...',
                    text: '@ViewBag.ErrorMessage'
                });
                </text>
            }
        });
    </script>
</body>
</html>
